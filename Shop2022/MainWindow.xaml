<Window x:Class="Shop2022.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop2022"
        mc:Ignorable="d"
        Title="Авторизация" Icon="image/icon.ico" Height="600" Width="400" FontSize="22" FontFamily="Comic Sans MS" >
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center">Введите данные</Label>
            <Label HorizontalAlignment="Center" >Логин</Label>
            <TextBox x:Name="loginElem" Margin="10" Width="250" Height="40" ></TextBox>
            <Label HorizontalAlignment="Center" >Пароль</Label>
            <PasswordBox x:Name="passwordElem" Margin="10" Width="250" Height="40" ></PasswordBox>
            <Button Margin="10" Width="150" Height="40" Click="Button_Click">Войти</Button>
            <Button Margin="10" Width="150" Height="40" Click="Button_Click_1">Товары</Button>
        </StackPanel>
        <Image Source="image/logo.png" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"></Image>
    </Grid>
</Window>
